#include <stdio.h>
#include <string.h>
#define MAX 1000005
int longestValidParentheses(char* s) {
    int n = strlen(s);
    int stack[MAX];  
    int top = -1;
    stack[++top] = -1;
    int maxLen = 0;
    for (int i = 0; i < n; i++) {
        if (s[i] == '(') {
            stack[++top] = i;
        } else {
            top--;
            if (top == -1) {
                stack[++top] = i;
            } else {
                int len = i - stack[top];
                if (len > maxLen) maxLen = len;
            }
        }
    }
    return maxLen;
}
int main() {
    char s[MAX];
    scanf("%s", s);
    printf("%d\n", longestValidParentheses(s));
    return 0;
}
