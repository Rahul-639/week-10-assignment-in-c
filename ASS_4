#include <stdio.h>
#include <stdlib.h>
#define MAX 100005
long long getMaxArea(int arr[], int n) {
    int stack[MAX], top = -1;
    long long maxArea = 0;
    for (int i = 0; i <= n; i++) {
        int h = (i == n) ? 0 : arr[i];
        while (top >= 0 && arr[stack[top]] > h) {
            int height = arr[stack[top--]];
            int width = (top == -1) ? i : (i - stack[top] - 1);
            long long area = (long long)height * width;
            if (area > maxArea) maxArea = area;
        }
        stack[++top] = i;
    }
    return maxArea;
}
int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("%lld\n", getMaxArea(arr, n));
    return 0;
}
